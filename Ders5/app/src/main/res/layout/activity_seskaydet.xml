<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".SesKaydetActivity">


    <ImageView
        android:id="@+id/iv_seskaydet_mic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:srcCompat="@android:drawable/ic_btn_speak_now" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_seskaydet_mic"
        android:layout_margin="30dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/btn_seskaydet_kaydet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/blue"
            android:gravity="center_vertical|center_horizontal"
            android:text="Kaydet"
            android:textColor="@color/colorWhite" />


        <Button
            android:id="@+id/btn_seskaydet_durdur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@color/red"
            android:gravity="center_vertical|center_horizontal"
            android:text="Durdur"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_seskaydet_cal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@color/lightgreen"
            android:gravity="center_vertical|center_horizontal"
            android:text="Ã‡al"
            android:textColor="@color/colorWhite" />

    </LinearLayout>
</LinearLayout>